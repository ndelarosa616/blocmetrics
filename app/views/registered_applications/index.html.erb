<h1>Registered Applications</h1>
<div class='row'>
  <div class='col-md-8'>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Application Name</th>
          <th>Application URL</th>
          <th>Actions</th>
        </tr>
      </thead>
    <% @registered_applications.each do |application| %>
      <tr>
        <td><strong><%= link_to application.name, application %></strong></td>
        <td><%= link_to application.url, application.url, target: "_blank" %></td>
        <td>
          <%= link_to 'Show', registered_application_path(application), class: 'btn btn-success' %>
          <%= link_to 'Edit', edit_registered_application_path(application), class: 'btn btn-success' %>
          <%= link_to 'Delete', registered_application_path(application), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this application?' } %>
        </td>
      </tr>
    <% end %>
    </table>
    <%= link_to "Add new application", new_registered_application_path, class: 'btn btn-success' %>
  </div>
</div>
